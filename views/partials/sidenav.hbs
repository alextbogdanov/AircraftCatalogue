<!-- SIDE-NAV -->
<div id="side-nav">
    {{#each allAircrafts as |family manufacturer|}}
        <p class="manufacturer">{{manufacturer}}<i class="fas fa-caret-down"></i></p>
        <ul class="manufacturer-models hidden">
            
            {{#each family as |aircrafts families|}}
                <p class="family">{{families}} family<i class="fas fa-caret-down"></i></p>
                <ul class="manufacturer-families">
                    {{#each aircrafts}}
                        <li>
                            <a href="/aircrafts/model/{{this._id}}" class="aircraft-model">{{this.name}}</a>
                        </li>
                    {{/each}}
                </ul>
            {{/each}}
        </ul>
    {{/each}}
</div>